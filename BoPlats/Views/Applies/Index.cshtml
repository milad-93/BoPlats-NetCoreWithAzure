@model BoPlats.Models.ApplicationDisplayViewModel

@{
    ViewData["Title"] = "Index";
}

<h1> Apartment Applications</h1>

<p>
    <a asp-action="Create">Apply for an apartment</a>
</p>

<form asp-controller="Apartment" asp-action="Index" method="get">
    <p>

        <select asp-for="ApartmentAdressSearch" asp-items="Model.ApartmentAdress">
            <option value="">Adress</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>



<div class="row">
    <div class="col-12">

        <table class="table table-sm table-striped table-hover border-bottom">
            <thead>
                <tr>
                    <th class="d-none d-lg-table-cell">
                        @Html.DisplayNameFor(model => model.Applications[0].Id)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Applications[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications[0].LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications[0].PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications[0].email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications[0].Salary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Applications[0].socSecNum)
                    </th>
                 
                    <th>
                        @Html.DisplayNameFor(model => model.Applications[1].Apartment.Adress)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>


             
                    @foreach (var item in Model.Applications)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td class="d-none d-lg-table-cell">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.socSecNum)
                    </td>
                  
                    <td>
                        @Html.DisplayFor(modelItem => item.Apartment.Adress)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
                    }
            </tbody>
        </table>



    </div>
</div>